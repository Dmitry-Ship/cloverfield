.popup-menu
  padding 10px 0
  fancy-shadow()
  color black
  z-index: 2
  // +below(600px)
  //   &::after, ::before
  //     display: none;
  //   fixed top 50% left 50%
  //   transform translate(-50%, -50%) scale(2)

.popup-menu__list
  padding: 0
  margin: 0

.popup-menu__item
  display block
  padding 12px 15px
  white-space nowrap
  border-left 3px solid transparent
  border-right 3px solid transparent
  cursor pointer
  &:hover
    color $color__accent
    border-left: 3px solid $color__accent
    border-right: 3px solid $color__accent
    .popup-menu__item__link
      color $color__accent

.popup-menu__item__link
  color black
