@value colors "../../styles/colors.styl";
@value flat_wet_asphalt from colors;
@value note_green from colors;
@value note_red from colors;
@value note_yellow from colors;
@value note_blue from colors;
@value note_grey from colors;
@value note_orange from colors;
@value note_teal from colors;

.note
  font-family Rubik
  line-height 20px
  width 250px
  background white
  margin-bottom 30px
  padding 30px 15px 15px 15px
  transition background 300ms ease-in-out
  +tablet()
    width 100%
  &:hover
    .actions__icon
      opacity 1

.actions__icon
  cursor pointer
  color rgba(black, 0.3)
  opacity 0
  transition all 150ms ease-in-out
  &:hover
    color black

.contentEditable
  text-align justify
  margin 0 0 10px 0
  padding 5px 10px
  outline none
  border-radius 5px
  cursor pointer
  background rgba(white, 0)
  &:focus
    background rgba(white, 0.3)
    animation out 120ms forwards

@keyframes out
  0%
    box-shadow 0 0 0px rgba(black, 0.5)
  50%
    box-shadow 0 0 20px rgba(black, 0.15)
  100%
    box-shadow 0 0 10px rgba(black, 0.3)

.image
  width calc(100% + 30px)
  height auto
  transform: translate(-15px, -30px);

.red
  background note_red
.orange
  background note_orange
.yellow
  background note_yellow
.grey
  background note_grey
.blue
  background note_blue
.teal
  background note_teal
.green
  background note_green
.white
  background white
