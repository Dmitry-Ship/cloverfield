.defaultLabel
  cursor pointer
  width 100%
  height 180px
  text-align: center;
  position: relative;
  color grey
  border-left: 3px solid grey
  border-right: 3px solid grey
  background whitesmoke
  display: block;
  &:hover
    border-left: 3px solid black
    border-right: 3px solid black
    background white

.thumbnails
  width: 100%
  padding: 0 40px
  position: absolute;
  top 50%
  transform: translateY(-50%);
  background: pink
  height: 100px

.thumbnail
  position: relative;
  background: red
  width: 100px
  height: 100px

.image
  width: 100%
  height: auto
  // border-radius: 50%
  overflow: hidden;

.deleteIcon
  // display: none;
  background: rgba(black, .4)
  border-radius: 5px
  color: rgba(white, .4)
  cursor: pointer;
  position: absolute;
  right 5%
  top 5%
  &:hover
    color white
