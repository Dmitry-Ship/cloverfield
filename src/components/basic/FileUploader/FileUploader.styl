@import '../../../styles/colors.styl'

.file-uploader
  display block
  size 100% 45px
  font-size 1rem
  padding 0 15px
  margin 0px 0px 30px 0px
  border-top none
  border-bottom none
  border-left 3px solid $color__primary--dark
  border-right 3px solid $color__primary--dark
  background $color__primary--light
  transition all 300ms ease-in-out
  &:focus
    background white
    border-left 3px solid black
    border-right 3px solid black
