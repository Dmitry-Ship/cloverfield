@import "../../../styles/index.styl"
@value colors "../../../styles/colors.styl";
@value accent from colors;
@value bg from colors;
.wrapper
  abs-center()

.loadingText
  color accent
  text-align: center;

.loader
  background-color: bg
  margin auto
  circle(100px)
  position relative
  &:before, &:after
    circle(100px)
    content ''
    display block

.spinny
  composes loader
  &:after
    absolute top -4px left -4px
    border 4px solid transparent
    border-top-color accent
    border-bottom-color accent
    animation spinny 1s linear infinite

@keyframes spinny
  0%
    transform rotate(0deg) scale(1)
  50%
    transform rotate(180deg) scale(1.5)
  100%
    transform rotate(360deg) scale(1)

.bouncy
  composes loader
  animation spin 2s linear infinite
  &:before, &:after
    height 20px
    width 20px
    background accent
    absolute top -10px left 50%
    margin-left -10px
  &:after
    top auto
    bottom -10px
    animation bouncy 0.5s ease-in-out infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
@keyframes bouncy
  0%
    transform translateY(0px)
  50%
    transform translateY(30px)


.clock
  composes loader
  background none
  border 4px solid #eee
  &::after
    width 4px
    height 66px
    background accent
    border-radius 0px
    absolute top 50% left 50%
    margin-left -2px
    animation spin 2s linear infinite
    transform-origin top center

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)


.pulse
  composes loader
  &:before, &:after
    absolute top 50% left 50%
    margin-left -50px
    margin-top -50px
    background accent
  &:before
    animation pulse .5s linear infinite
  &:after
    opacity 0
    animation pulse .25s linear .62s infinite
@keyframes pulse
  0%
    transform scale(0)
    opacity 1
  100%
    transform scale(1.3)
    opacity 0

.triple-dots
  composes loader
  background: transparent
  .dot
    display block
    circle(20px)
    background accent
    position absolute
    top 50%
    &:nth-child(1)
      transform: translateX(-50%);
      animation bounce .3s ease-in-out infinite
    &:nth-child(2)
      left: 50%
      transform: translateX(-50%);
      animation bounce .3s ease-in-out 0.1s infinite
    &:nth-child(3)
      left: 100%
      transform: translateX(-50%);
      animation bounce .3s ease-in-out 0.2s infinite

@keyframes bounce
  0%
    top 0%
  50%
    top 50%
  100%
    top 0%
