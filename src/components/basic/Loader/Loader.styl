@import '../../../styles/index.styl'

.wrapper
  abs-center()

.loader, .spinny, .bouncy, .clock, .pulse, .triple-dots
  margin auto
  circle(100px)
  background color__bg
  position relative
  &:before, &:after
    circle(100px)
    content ''
    display block

.spinny:after
  // composes loader
  absolute top -4px left -4px
  border 4px solid transparent
  border-top-color color__accent
  border-bottom-color color__accent
  animation spinny 1s linear infinite

@keyframes spinny
  0%
    transform rotate(0deg) scale(1)
  50%
    transform rotate(180deg) scale(1.2)
  100%
    transform rotate(360deg) scale(1)

.bouncy
  // composes loader
  animation spin 2s linear infinite
  &:before, &:after
    height 20px
    width 20px
    background color__accent
    absolute top -10px left 50%
    margin-left -10px
  &:after
    top auto
    bottom -10px
    animation bouncy 0.5s ease-in-out infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
@keyframes bouncy
  0%
    transform translateY(0px)
  50%
    transform translateY(30px)


.clock
  // composes loader
  background none
  border 4px solid #eee
  &::after
    width 4px
    height 66px
    background color__accent
    border-radius 0px
    absolute top 50% left 50%
    margin-left -2px
    animation spin 2s linear infinite
    transform-origin top center

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)


.pulse
  // composes loader
  &:before, &:after
    absolute top 50% left 50%
    margin-left -50px
    margin-top -50px
    background $color__action
  &:before
    animation pulse .5s linear infinite
  &:after
    opacity 0
    animation pulse .25s linear .62s infinite
@keyframes pulse
  0%
    transform scale(0)
    opacity 1
  100%
    transform scale(1.3)
    opacity 0

.triple-dots
  // composes loader
  height 0px
  width 0px
  position relative
  .dot
    display block
    circle(20px)
    background color__accent
    position absolute
    top 0px
    &:nth-child(1)
      left -40px
      animation bounce .3s ease-in-out infinite
    &:nth-child(2)
      animation bounce .3s ease-in-out 0.1s infinite
    &:nth-child(3)
      left 40px
      animation bounce .3s ease-in-out 0.2s infinite

@keyframes bounce
  0%
    transform translateY(0px)
  50%
    transform translateY(-30px)
