@import '../../../styles/index.styl'

.popupMenu
  padding 10px 0
  color black
  z-index: 2
  fancy-shadow()

.list
  padding: 0
  margin: 0

.item
  display block
  padding 12px 15px
  white-space nowrap
  border-left 3px solid transparent
  border-right 3px solid transparent
  cursor pointer
  &:hover
    color color__accent
    border-left: 3px solid color__accent
    border-right: 3px solid color__accent
    .item__link
      color color__accent

.item__link
  color black
