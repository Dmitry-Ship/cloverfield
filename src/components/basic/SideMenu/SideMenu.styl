.side-menu
  fixed top 55px right 100%
  background $color__accent
  width 100%
  height calc(100vh - 55px)
  z-index 1
  font-size 1.8rem
  transition all 300ms ease-in-out
  text-align left
  display: none;
  +tablet()
    display table
  &--shown
    fixed top 55px right 0px

.side-menu__content
  padding: 0px
  display table-cell
  vertical-align middle

.side-menu__item
  display block
  padding 25px
  white-space nowrap
  color white
  &:hover
    background white
    color $color__accent
    .side-menu__item__link
      color $color__accent

.side-menu__item__link
  color white

.side-menu__item__icon
  vertical-align: middle;
  margin: 0 40px 0 15px
