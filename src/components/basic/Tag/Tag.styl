.tag
  margin 0 5px 5px 0
  background rgba(black, 0.3)
  cursor pointer
  display inline-block
  position relative
  padding 5px 23px 5px 5px
  &:hover
    .tag__icon
      opacity 1

.tag__link
  color white

.tag__icon
  absolute top 50% right 4px
  transform translateY(-50%)
  color rgba(white, 0.5)
  opacity 0
  transition all 300ms ease-in-out
  &:hover
    color white
