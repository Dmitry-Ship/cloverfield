.level-3 {
  box-shadow: 0px 9px 60px -4px rgba(0, 0, 0, 0.5);
}

.level-2 {
  box-shadow: 0px 6px 40px -4px rgba(0, 0, 0, 0.5);
}

.level-1 {
  box-shadow: 0px 3px 8px -4px rgba(0,0,0,0.5);
}

.dynamic {
  box-shadow: 0px 3px 8px -4px rgba(0,0,0,0.5);
  transition: box-shadow 300ms ease-in-out;
}

.dynamic:hover {
  box-shadow: 0px 6px 40px -4px rgba(0, 0, 0, 0.5);
}


.dynamic-input {
  box-shadow: 0px 3px 0px rgba(0, 0, 0, 0.0);
  transition: box-shadow 100ms ease-in-out;
}

.dynamic-input:focus {
  box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.4);
}
